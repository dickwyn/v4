{
  "name": "v4",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "forwardPorts": [3000],
  "postCreateCommand": "git config --global user.name 'dickwyn' && git config --global user.email 'dickwyn@outlook.com' && pnpm install",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true,
        "terminal.integrated.defaultProfile.linux": "zsh"
      }
    }
  },
  "containerEnv": {
    "npm_config_store_dir": "/home/node/.local/share/pnpm/store"
  },
  "remoteEnv": {
    "NEXT_PUBLIC_TINA_CLIENT_ID": "${localEnv:NEXT_PUBLIC_TINA_CLIENT_ID}",
    "TINA_TOKEN": "${localEnv:TINA_TOKEN}",
    "TINA_SEARCH_TOKEN": "${localEnv:TINA_SEARCH_TOKEN}"
  }
}
